<h1>Add Page</h1>

<%= params %> <br>
<%= @parent_id %>

<%= form_with model: @page, url: "/#{page_path(@page)}" do |f| %>
  <%= f.hidden_field :parent_id %>
  
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :name %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :name, required: true, placeholder: 'Name', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :body, placeholder: 'Body', class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Submit page!", class: 'btn btn-primary' %>
<% end %>